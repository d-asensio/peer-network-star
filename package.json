  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "husky": "5.2.0",
    "jest": "26.4.2",
    "lerna": "3.22.1",
    "lint-staged": "10.5.3",
    "standard": "14.3.4"
  }
