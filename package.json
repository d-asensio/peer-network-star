  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run --parallel dev",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "jest --coverage --verbose",
    "test:watch": "yarn test --watch",
    "prepare": "lerna run build"
